<UserControl x:Class="SeventhHeaven.UserControls.MyModsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeventhHeaven.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MainListViewItemStyle}">
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Style>
        
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="lstMods" ItemsSource="{Binding ModList}" SelectionChanged="lstMods_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="250" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Author" Width="100" DisplayMemberBinding="{Binding Author}"/>
                    <GridViewColumn Header="Version" Width="100" DisplayMemberBinding="{Binding Version}"/>
                    <GridViewColumn Header="Category" Width="100" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Empty}"/>
                    <GridViewColumn Header="Active" Width="75">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right">

            <Button x:Name="btnImport" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconImport}"
                    ToolTip="Import Mod"
                    Margin="0,0,0,0"/>

            <Button x:Name="btnRefresh" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconRefresh}"
                    ToolTip="Refresh List"
                    Margin="0,0,0,0"/>

            <Button x:Name="btnDeactivateAll" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconCancel}"
                    ToolTip="Deactivate All"
                    Margin="0,0,0,0"/>

            <Button x:Name="btnUninstall" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconDelete}"
                    ToolTip="Uninstall Mod"
                    Margin="0,0,0,0"/>

            <Button x:Name="btnConfigure" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconSettings}"
                    ToolTip="Configure Mod"
                    Margin="0,0,0,10"/>

            <Button x:Name="btnMoveTop" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconUpArrow}"
                    ToolTip="Move to Top"
                    Margin="0,0,0,0"/>

            <Button x:Name="btnMoveUp" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconUpChevron}"
                    ToolTip="Move Up"
                    Margin="0,0,0,0"/>
            
            <Button x:Name="btnMoveDown" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconDownChevron}"
                    ToolTip="Move Down"/>

            <Button x:Name="btnSendBottom" 
                    Style="{StaticResource ImageButton}"
                    Content="{StaticResource iconDownArrow}"
                    ToolTip="Send to Bottom"
                    Margin="0,0,0,0"/>
        </StackPanel>
        
    </Grid>
</UserControl>
