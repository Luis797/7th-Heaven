<?xml version="1.0" encoding="utf-8" ?>
<ConfigSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <!-- GRAPHICS TAB -->
  <Setting xsi:type="DropDown">
    <Group>Grafica</Group>
    <Name>API grafica</Name>
    <Description>Imposta il software di rendering. 'Auto' determina la scelta migliore in base alla tua GPU. Possono verificarsi arresti anomali utilizzando 'OpenGL' con schede AMD.</Description>
    <DefaultValue>renderer_backend = 0</DefaultValue>
    <Option>
      <Text>Auto</Text>
      <Settings>renderer_backend = 0</Settings>
    </Option>
    <Option>
      <Text>OpenGL</Text>
      <Settings>renderer_backend = 1</Settings>
    </Option>
    <Option>
      <Text>DirectX 11</Text>
      <Settings>renderer_backend = 3</Settings>
    </Option>
  </Setting>

  <Setting xsi:type="DropDown">
      <Group>Grafica</Group>
      <Name>Risoluzione</Name>
      <Description>Imposta le dimensioni della finestra (o dello schermo intero) di FF7. 'Auto' utilizza la risoluzione originale del gioco in modalità finestra e quella del desktop in modalità schermo intero.</Description>
      <DefaultValue>window_size_x = 1280,window_size_y = 720</DefaultValue>
      <Option>
        <Text>Auto</Text>
        <Settings>window_size_x = 0,window_size_y = 0</Settings>
      </Option>
      <Option>
        <Text>640x480</Text>
        <Settings>window_size_x = 640,window_size_y = 480</Settings>
      </Option>
      <Option>
        <Text>800x600</Text>
        <Settings>window_size_x = 800,window_size_y = 600</Settings>
      </Option>
      <Option>
        <Text>1024x768</Text>
        <Settings>window_size_x = 1024,window_size_y = 768</Settings>
      </Option>
      <Option>
        <Text>1280x720</Text>
        <Settings>window_size_x = 1280,window_size_y = 720</Settings>
      </Option>
      <Option>
        <Text>1280x960</Text>
        <Settings>window_size_x = 1280,window_size_y = 960</Settings>
      </Option>
      <Option>
        <Text>1400x1050</Text>
        <Settings>window_size_x = 1400,window_size_y = 1050</Settings>
      </Option>
      <Option>
        <Text>1440x1080</Text>
        <Settings>window_size_x = 1440,window_size_y = 1080</Settings>
      </Option>
      <Option>
        <Text>1600x1200</Text>
        <Settings>window_size_x = 1600,window_size_y = 1200</Settings>
      </Option>
      <Option>
        <Text>1920x1080</Text>
        <Settings>window_size_x = 1920,window_size_y = 1080</Settings>
      </Option>
      <Option>
        <Text>1920x1440</Text>
        <Settings>window_size_x = 1920,window_size_y = 1440</Settings>
      </Option>
      <Option>
        <Text>2048x1536</Text>
        <Settings>window_size_x = 2048,window_size_y = 1536</Settings>
      </Option>
      <Option>
        <Text>2560x1440</Text>
        <Settings>window_size_x = 2560,window_size_y = 1440</Settings>
      </Option>
      <Option>
        <Text>2560x1920</Text>
        <Settings>window_size_x = 2560,window_size_y = 1920</Settings>
      </Option>
      <Option>
        <Text>2880x2160</Text>
        <Settings>window_size_x = 2880,window_size_y = 2160</Settings>
      </Option>
      <Option>
        <Text>3840x2160</Text>
        <Settings>window_size_x = 3840,window_size_y = 2160</Settings>
      </Option>
    </Setting>

  <Setting xsi:type="DropDown">
    <Group>Grafica</Group>
    <Name>Modalità Finestra</Name>
    <Description>Visualizza il gioco in una finestra o a schermo intero senza bordi.</Description>
    <DefaultValue>fullscreen = no</DefaultValue>
    <Option>
      <Text>Finestra</Text>
      <Settings>fullscreen = no</Settings>
    </Option>
    <Option>
      <Text>Schermo Intero</Text>
      <Settings>fullscreen = yes</Settings>
    </Option>
  </Setting>

  <Setting xsi:type="DropDown">
    <Group>Grafica</Group>
    <Name>Rateo d'Aspetto</Name>
    <Description>Mantiene il rateo d'aspetto in 4:3 aggiungendo dei bordi neri ai lati.</Description>
    <DefaultValue>preserve_aspect = yes</DefaultValue>
    <Option>
      <Text>Mantieni Aspetto</Text>
      <Settings>preserve_aspect = yes</Settings>
    </Option>
    <Option>
      <Text>Estendi a Schermo Intero</Text>
      <Settings>preserve_aspect = no</Settings>
    </Option>
  </Setting>

  <Setting xsi:type="DropDown">
    <Group>Grafica</Group>
    <Name>Antialiasing</Name>
    <Description>Applica il filtro MSAA 2x / 4x / 8x / 16x. Riduce i bordi frastagliati e migliora la qualità dell'immagine. Può influire negativamente sulle prestazioni.</Description>
    <DefaultValue>enable_antialiasing = 0</DefaultValue>
    <Option>
      <Text>No</Text>
      <Settings>enable_antialiasing = 0</Settings>
    </Option>
    <Option>
      <Text>2x MSAA</Text>
      <Settings>enable_antialiasing = 2</Settings>
    </Option>
    <Option>
      <Text>4x MSAA</Text>
      <Settings>enable_antialiasing = 4</Settings>
    </Option>
    <Option>
      <Text>8x MSAA</Text>
      <Settings>enable_antialiasing = 8</Settings>
    </Option>
    <Option>
      <Text>16x MSAA</Text>
      <Settings>enable_antialiasing = 16</Settings>
    </Option>
  </Setting>

  <Setting xsi:type="Checkbox">
    <Group>Grafica</Group>
    <Name>Filtro Antisotropico</Name>
    <Description>Usa mipmaps per le texture in alta qualità. Può migliorare le prestazioni e la qualità dell'immagine, ma utilizza più Memoria Texture.</Description>
    <DefaultValue>enable_anisotropic = yes</DefaultValue>
    <TrueSetting>enable_anisotropic = yes</TrueSetting>
    <FalseSetting>enable_anisotropic = no</FalseSetting>
  </Setting>

  <Setting xsi:type="Checkbox">
    <Group>Grafica</Group>
    <Name>Filtro Lineare</Name>
    <Description>Può migliorare la qualità delle texture a bassa risoluzione. Non raccomandato se sono attive mod con texture ad alta risoluzione. Se si verificano degli artefatti viola o azzurri disabilita quest'opzione.</Description>
    <DefaultValue>linear_filter = no</DefaultValue>
    <TrueSetting>linear_filter = yes</TrueSetting>
    <FalseSetting>linear_filter = no</FalseSetting>
  </Setting>

  <Setting xsi:type="Checkbox">
    <Group>Grafica</Group>
    <Name>V-Sync</Name>
    <Description>Sincronizza il framerate del gioco con la frequenza d'aggiornamento dello schermo. Potrebbe influire negativamente sulle performance di gioco o rendere le mod che fanno uso di 60 fps inutilizzabili. Attivare solo se si percepisce dello screen tearing.</Description>
    <DefaultValue>enable_vsync = no</DefaultValue>
    <TrueSetting>enable_vsync = yes</TrueSetting>
    <FalseSetting>enable_vsync = no</FalseSetting>
  </Setting>

  <!-- ADVANCED TAB -->

  <Setting xsi:type="DropDown">
    <Group>Avanzate</Group>
    <Name>Opzioni Musica</Name>
    <Description>Usa VGMStream per riprodurre la musica in formato OGG Vorbis di alta qualità. Richiesto per le mod musicali. Altrimenti sarà usato lo standard MIDI.</Description>
    <DefaultValue>use_external_music = yes</DefaultValue>
    <Option>
      <Text>VGMStream (Raccomandato)</Text>
      <Settings>use_external_music = yes</Settings>
    </Option>
    <Option>
      <Text>MIDI Originali</Text>
      <Settings>use_external_music = no</Settings>
    </Option>
  </Setting>

  <Setting xsi:type="DropDown">
    <Group>Avanzate</Group>
    <Name>Opzioni Filmati</Name>
    <Description>Usa FFMPEG per riprodurre i filmati di gioco (FMVs). Oppure usa il renderer originale, non supportato da molti codec video.</Description>
    <DefaultValue>enable_ffmpeg_videos = yes</DefaultValue>
    <Option>
      <Text>FFMPEG (Raccomandato)</Text>
      <Settings>enable_ffmpeg_videos = yes</Settings>
    </Option>
    <Option>
      <Text>Renderer Originale</Text>
      <Settings>enable_ffmpeg_videos = no</Settings>
    </Option>
  </Setting>

  <Setting xsi:type="Checkbox">
    <Group>Avanzate</Group>
    <Name>Mostra Statistiche</Name>
    <Description>Mostra alcune informazioni di debug in tempo reale in sovraimpressione.</Description>
    <DefaultValue>show_stats = no</DefaultValue>
    <TrueSetting>show_stats = yes</TrueSetting>
    <FalseSetting>show_stats = no</FalseSetting>
  </Setting>

  <Setting xsi:type="Checkbox">
    <Group>Avanzate</Group>
    <Name>Mostra Versione Driver</Name>
    <Description>Mostra la versione del driver attualmente utilizzata in sovraimpressione o nella barra del titolo.</Description>
    <DefaultValue>show_version = no</DefaultValue>
    <TrueSetting>show_version = yes</TrueSetting>
    <FalseSetting>show_version = no</FalseSetting>
  </Setting>

  <Setting xsi:type="Checkbox">
    <Group>Avanzate</Group>
    <Name>Mostra FPS</Name>
    <Description>Mostra un resoconto trasparente dei frame al secondo nell'angolo in alto a destra dello schermo.</Description>
    <DefaultValue>show_fps = no</DefaultValue>
    <TrueSetting>show_fps = yes</TrueSetting>
    <FalseSetting>show_fps = no</FalseSetting>
  </Setting>

  <Setting xsi:type="Checkbox">
    <Group>Avanzate</Group>
    <Name>Mostra API Grafica</Name>
    <Description>Mostra l'API grafica attualmente utilizzata (OpenGL / DirectX11) in sovraimpressione o nella barra del titolo.</Description>
    <DefaultValue>show_renderer_backend = no</DefaultValue>
    <TrueSetting>show_renderer_backend = yes</TrueSetting>
    <FalseSetting>show_renderer_backend = no</FalseSetting>
  </Setting>

</ConfigSpec>
